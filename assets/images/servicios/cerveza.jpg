  <circle cx="215" cy="180" r="1" fill="#FFFFFF" opacity="0.6"/>
  <circle cx="190" cy="190" r="1" fill="#FFFFFF" opacity="0.6"/>
  <circle cx="205" cy="200" r="1" fill="#FFFFFF" opacity="0.6"/>
  
