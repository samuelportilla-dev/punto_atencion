  <circle cx="185" cy="138" r="1" fill="#FFFFFF" opacity="0.8"/>
  <circle cx="215" cy="135" r="1" fill="#FFFFFF" opacity="0.8"/>
  
  <!-- Burbujas en la cerveza -->
