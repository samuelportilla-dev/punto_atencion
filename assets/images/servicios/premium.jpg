<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="goldGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFD700;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFA500;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="screenGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#000080;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0000CD;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Mesa -->
  <ellipse cx="200" cy="250" rx="180" ry="40" fill="#f8f8f8" stroke="#d0d0d0" stroke-width="2"/>
  
  <!-- Monitor premium -->
  <rect x="120" y="100" width="160" height="100" rx="5" fill="url(#goldGrad)" stroke="#FF8C00" stroke-width="3"/>
  
  <!-- Pantalla -->
  <rect x="130" y="110" width="140" height="80" rx="3" fill="url(#screenGrad)"/>
  
  <!-- Contenido de la pantalla -->
  <rect x="140" y="120" width="120" height="60" fill="#FFFFFF" opacity="0.9"/>
  <text x="200" y="135" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="10" font-weight="bold">El Punto PREMIUM</text>
  <text x="200" y="150" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="6">Funciones Avanzadas</text>
  <text x="200" y="160" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="6">• Reportes Avanzados</text>
  <text x="200" y="170" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="6">• Análisis de Datos</text>
  
  <!-- Base del monitor -->
  <rect x="190" y="200" width="20" height="10" fill="url(#goldGrad)" stroke="#FF8C00" stroke-width="1"/>
  
  <!-- Teclado premium -->
  <rect x="150" y="220" width="100" height="20" rx="3" fill="url(#goldGrad)" stroke="#FF8C00" stroke-width="1"/>
  
  <!-- Mouse premium -->
  <ellipse cx="280" cy="230" rx="15" ry="8" fill="url(#goldGrad)" stroke="#FF8C00" stroke-width="1"/>
  
  <!-- Estrella de premium -->
  <path d="M200 80 L205 90 L215 90 L207 97 L210 107 L200 102 L190 107 L193 97 L185 90 L195 90 Z" fill="#FFD700" stroke="#FF8C00" stroke-width="2"/>
  
  <!-- Efectos de brillo -->
  <circle cx="180" cy="130" r="3" fill="#FFFFFF" opacity="0.6"/>
  <circle cx="220" cy="140" r="2" fill="#FFFFFF" opacity="0.6"/>
  <circle cx="190" cy="160" r="2" fill="#FFFFFF" opacity="0.6"/>
  <circle cx="210" cy="170" r="3" fill="#FFFFFF" opacity="0.6"/>
  
  <!-- Cables dorados -->
  <path d="M200 100 Q220 80 240 100" stroke="#FFD700" stroke-width="3" fill="none"/>
  <path d="M200 100 Q180 80 160 100" stroke="#FFD700" stroke-width="3" fill="none"/>
  
  <!-- Título -->
  <text x="200" y="50" text-anchor="middle" fill="#2c3e50" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Actualización Premium</text>
</svg>
