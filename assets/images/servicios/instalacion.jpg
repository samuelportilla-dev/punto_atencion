<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="computerGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#E0E0E0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#C0C0C0;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="screenGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#000080;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0000CD;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Mesa -->
  <ellipse cx="200" cy="250" rx="180" ry="40" fill="#f8f8f8" stroke="#d0d0d0" stroke-width="2"/>
  
  <!-- Monitor -->
  <rect x="120" y="100" width="160" height="100" rx="5" fill="url(#computerGrad)" stroke="#A0A0A0" stroke-width="2"/>
  
  <!-- Pantalla -->
  <rect x="130" y="110" width="140" height="80" rx="3" fill="url(#screenGrad)"/>
  
  <!-- Contenido de la pantalla -->
  <rect x="140" y="120" width="120" height="60" fill="#FFFFFF" opacity="0.9"/>
  <text x="200" y="140" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="12" font-weight="bold">El Punto</text>
  <text x="200" y="155" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="8">Sistema de Pedidos</text>
  <text x="200" y="170" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="8">Instalación</text>
  
  <!-- Base del monitor -->
  <rect x="190" y="200" width="20" height="10" fill="url(#computerGrad)" stroke="#A0A0A0" stroke-width="1"/>
  
  <!-- Teclado -->
  <rect x="150" y="220" width="100" height="20" rx="3" fill="url(#computerGrad)" stroke="#A0A0A0" stroke-width="1"/>
  
  <!-- Mouse -->
  <ellipse cx="280" cy="230" rx="15" ry="8" fill="url(#computerGrad)" stroke="#A0A0A0" stroke-width="1"/>
  
  <!-- Herramientas -->
  <rect x="80" y="180" width="20" height="4" fill="#FFD700" rx="1"/>
  <rect x="85" y="175" width="4" height="14" fill="#FFD700"/>
  
  <!-- Destornillador -->
  <rect x="90" y="190" width="15" height="3" fill="#C0C0C0" rx="1"/>
  <rect x="105" y="188" width="2" height="7" fill="#C0C0C0"/>
  
  <!-- Cables -->
  <path d="M200 100 Q220 80 240 100" stroke="#000000" stroke-width="2" fill="none"/>
  <path d="M200 100 Q180 80 160 100" stroke="#000000" stroke-width="2" fill="none"/>
  
  <!-- Título -->
  <text x="200" y="50" text-anchor="middle" fill="#2c3e50" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Instalación Básica</text>
</svg>
