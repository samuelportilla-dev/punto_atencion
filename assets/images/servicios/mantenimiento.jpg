<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="serverGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#E0E0E0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#C0C0C0;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="personGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFE4B5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#DEB887;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Mesa -->
  <ellipse cx="200" cy="250" rx="180" ry="40" fill="#f8f8f8" stroke="#d0d0d0" stroke-width="2"/>
  
  <!-- Servidor -->
  <rect x="150" y="100" width="100" height="120" fill="url(#serverGrad)" stroke="#A0A0A0" stroke-width="2"/>
  
  <!-- Paneles del servidor -->
  <rect x="160" y="110" width="80" height="15" fill="#000000" stroke="#333333" stroke-width="1"/>
  <rect x="160" y="130" width="80" height="15" fill="#000000" stroke="#333333" stroke-width="1"/>
  <rect x="160" y="150" width="80" height="15" fill="#000000" stroke="#333333" stroke-width="1"/>
  <rect x="160" y="170" width="80" height="15" fill="#000000" stroke="#333333" stroke-width="1"/>
  
  <!-- Luces LED -->
  <circle cx="170" cy="117" r="2" fill="#00FF00"/>
  <circle cx="180" cy="117" r="2" fill="#00FF00"/>
  <circle cx="190" cy="117" r="2" fill="#00FF00"/>
  <circle cx="200" cy="117" r="2" fill="#00FF00"/>
  <circle cx="210" cy="117" r="2" fill="#00FF00"/>
  <circle cx="220" cy="117" r="2" fill="#00FF00"/>
  <circle cx="230" cy="117" r="2" fill="#00FF00"/>
  
  <!-- Técnico -->
  <circle cx="100" cy="120" r="20" fill="url(#personGrad)"/>
  <rect x="80" y="140" width="40" height="60" fill="#FFD700" rx="5"/>
  <rect x="90" y="200" width="20" height="30" fill="#000000"/>
  
  <!-- Herramientas -->
  <rect x="80" y="180" width="20" height="4" fill="#FFD700" rx="1"/>
  <rect x="85" y="175" width="4" height="14" fill="#FFD700"/>
  
  <!-- Destornillador -->
  <rect x="90" y="190" width="15" height="3" fill="#C0C0C0" rx="1"/>
  <rect x="105" y="188" width="2" height="7" fill="#C0C0C0"/>
  
  <!-- Monitor de monitoreo -->
  <rect x="300" y="120" width="60" height="40" fill="#000000" stroke="#333333" stroke-width="2"/>
  <rect x="305" y="125" width="50" height="30" fill="#00FF00"/>
  <text x="330" y="140" text-anchor="middle" fill="#000000" font-family="Arial, sans-serif" font-size="6">Sistema OK</text>
  <text x="330" y="150" text-anchor="middle" fill="#000000" font-family="Arial, sans-serif" font-size="6">Uptime: 99.9%</text>
  
  <!-- Cables de red -->
  <path d="M250 160 Q270 150 290 160" stroke="#000000" stroke-width="2" fill="none"/>
  <path d="M250 170 Q270 160 290 170" stroke="#000000" stroke-width="2" fill="none"/>
  
  <!-- Documentos de mantenimiento -->
  <rect x="50" y="160" width="40" height="50" fill="#FFFFFF" stroke="#000000" stroke-width="1"/>
  <text x="70" y="175" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="6">Reporte</text>
  <text x="70" y="185" text-anchor="middle" fill="#000080" font-family="Arial, sans-serif" font-size="6">Mantenimiento</text>
  
  <!-- Título -->
  <text x="200" y="50" text-anchor="middle" fill="#2c3e50" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Mantenimiento Mensual</text>
</svg>
