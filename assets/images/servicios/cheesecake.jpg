<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="plateGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8f8f8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e8e8e8;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="cheesecakeGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F5F5DC;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F0E68C;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="crustGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#D2691E;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#A0522D;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Plato -->
  <ellipse cx="200" cy="200" rx="180" ry="60" fill="url(#plateGrad)" stroke="#d0d0d0" stroke-width="2"/>
  
  <!-- Cheesecake -->
  <rect x="120" y="140" width="160" height="60" rx="10" fill="url(#cheesecakeGrad)" stroke="#D2691E" stroke-width="2"/>
  
  <!-- Base de galleta -->
  <rect x="120" y="190" width="160" height="10" fill="url(#crustGrad)"/>
  
  <!-- Frutos rojos -->
  <circle cx="150" cy="160" r="4" fill="#FF0000"/>
  <circle cx="170" cy="155" r="3" fill="#FF0000"/>
  <circle cx="190" cy="158" r="4" fill="#FF0000"/>
  <circle cx="210" cy="156" r="3" fill="#FF0000"/>
  <circle cx="230" cy="159" r="4" fill="#FF0000"/>
  <circle cx="250" cy="157" r="3" fill="#FF0000"/>
  
  <!-- Salsa de frutos rojos -->
  <ellipse cx="200" cy="170" rx="50" ry="8" fill="#DC143C" opacity="0.7"/>
  
  <!-- Decoración -->
  <circle cx="180" cy="150" r="1" fill="#FFD700"/>
  <circle cx="200" cy="148" r="1" fill="#FFD700"/>
  <circle cx="220" cy="150" r="1" fill="#FFD700"/>
  
  <!-- Hojas de menta -->
  <path d="M190 145 Q195 140 200 145" fill="#228B22" stroke="#006400" stroke-width="1"/>
  <path d="M210 147 Q215 142 220 147" fill="#228B22" stroke="#006400" stroke-width="1"/>
  
  <!-- Título -->
  <text x="200" y="50" text-anchor="middle" fill="#2c3e50" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Cheesecake</text>
</svg>
